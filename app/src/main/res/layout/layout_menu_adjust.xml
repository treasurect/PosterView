<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/color_26">
    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <ImageView
            android:id="@+id/adjust_menu_replace"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="25dp"
            android:src="@mipmap/ic_rotate"/>
        <ImageView
            android:id="@+id/adjust_menu_rotate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="25dp"
            android:src="@mipmap/ic_rotate"/>

        <ImageView
            android:id="@+id/adjust_menu_flip"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="25dp"
            android:src="@mipmap/ic_flip_hor"/>

        <ImageView
            android:id="@+id/adjust_menu_filter"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="25dp"
            android:src="@mipmap/ic_filter"/>
    </LinearLayout>
</FrameLayout>